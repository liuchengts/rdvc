{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "rootDir": "../../",
    "outDir": "./build",
    "strict": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.html",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../common/*.tsx",
    "../../common/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
