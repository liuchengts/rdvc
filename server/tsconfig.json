{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "rootDir": "./",
    "outDir": "./build",
    "strict": true,
    "allowJs": true
  },
  "include": [
    "ts/**/*.ts",
    "ts/**/*.tsx",
    "../common/*.tsx",
    "../common/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
